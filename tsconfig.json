{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "declaration": true,
        "allowUnreachableCode": false,
        "moduleResolution": "node",
        "lib": [
            "esnext"
        ],
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./lib",
        "esModuleInterop": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "strictNullChecks": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ],
}
